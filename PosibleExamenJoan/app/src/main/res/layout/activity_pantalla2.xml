<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="#FF000000">
    <TextView
        android:id="@+id/TituloRestaurante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Taberna de MOE"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#000600"
        android:background="#c658c4"
        android:fontFamily=""
        />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bebidaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0011ff"
            android:text="Bebida Seleccionada: "/>
        <TextView
            android:id="@+id/bebPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:fontFamily="Arial"
            android:textSize="20dp"
            android:textColor="#0011ff"
            android:text="PRECIO" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aperitivoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0011ff"
            android:text="Aperitivo Seleccionado: "/>
        <TextView
            android:id="@+id/aperPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:fontFamily="Arial"
            android:textSize="20dp"
            android:textColor="#0011ff"
            android:text="PRECIO" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/vasoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0011ff"
            android:text="Vaso Seleccionado: "/>

        <TextView
            android:id="@+id/vasoPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:fontFamily="Arial"
            android:textSize="20dp"
            android:textColor="#0011ff"
            android:text="PRECIO" />
    </TableRow>
    <TableRow
        android:id="@+id/SeparadorCabecera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/LineaCabecera"
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_span="6"
            android:background="#ff000000">
        </FrameLayout>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/totalTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0011ff"
            android:text="TOTAL:  "/>
        <TextView
            android:id="@+id/totalPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:fontFamily="Arial"
            android:textSize="20dp"
            android:textColor="#0011ff"
            android:text="PRECIO" />
    </TableRow>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/botonVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsar para Volver"
            android:gravity="center"
            android:layout_gravity="center_horizontal|bottom" />
    </LinearLayout>


</TableLayout>