<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DrawingExampleLauncher"
    android:gravity="center">
    <Button
        android:onClick="launchDrawShapes1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/random_shape_button_label"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#f75d29"
        android:shadowColor="#fb6767"
        android:padding="10dp"
        android:layout_margin="10dp" />

    <Button
        android:onClick="launchDrawShapes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shape_drawable_button_label"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:background="#f75d29"
        android:shadowColor="#fb6767"
        android:padding="10dp"
        android:layout_margin="10dp" />

    <Button
        android:onClick="launchDrawShapes3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Boton 3"
        android:layout_gravity="center_horizontal"
        android:background="#f75d29"
        android:textColor="#ffffff"
        android:shadowColor="#fb6767"
        android:padding="10dp"
        android:layout_margin="10dp" />
</LinearLayout>